<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="5dp"
     >
    <TextView 
        android:id="@+id/textview_adapter_artical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:textColor="#00BFFF"
        android:text="标题"
        /> 
    <TextView 
        android:id="@+id/webview_adapter_article"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="内容"
 		android:layout_below="@+id/textview_adapter_artical"       
        />
    <TextView 
        android:id="@+id/text_adapter_article_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#696969"
        android:text="日起"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/webview_adapter_article"
        />
	 <TextView 
        android:id="@+id/text_adapter_article_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#696969"
        android:text="点击"
        android:layout_toLeftOf="@+id/text_adapter_article_comments"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/webview_adapter_article"
        />
	  <TextView 
        android:id="@+id/text_adapter_article_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#696969"
        android:text="评论"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/webview_adapter_article"
        />
</RelativeLayout>
