<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="3dp"
    android:background="#FFFFFF"
    > 
	
    <TextView
        android:id="@+id/textView_adapter_news_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/image_adapter_news"
        android:layout_alignTop="@+id/image_adapter_news"
        android:maxLines="2"
        android:text="TextView"
        android:textColor="#696969"
        android:textSize="14dp" />
    <TextView 
        android:id="@+id/textView_adapter_news_sourcename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/image_adapter_news"
        android:layout_alignTop="@+id/textView_adapter_news_comments"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="#696969"
        android:textSize="12dp" 
        />

    <TextView
        android:id="@+id/textView_adapter_news_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_adapter_news"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:textColor="#696969"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView_adapter_news_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_adapter_news"
        android:layout_toLeftOf="@+id/textView_adapter_news_comments"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:textColor="#696969"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_adapter_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:text="Large Text"
        android:layout_marginLeft="10dp"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/image_adapter_news"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_adapter_news_title"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
